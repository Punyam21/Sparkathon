@model MvcProject.Models.User

@{
    ViewBag.Title = "Login";
}

@{ try
    {
        if (TempData["msg"] != null)
        {
            <script>swal("Bad luck!", "Invalid email or password!", "error")</script>
        }
    }
    catch
    {

    }
}

<div class="row wave">
    <div class="col-lg-offset-3 col-lg-6">
        <div id="feedback-form">
            <h2 class="header">Login</h2>
                    <div id="target">
                    </div>
            <div>


                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div class="form-group">
                            @Html.Label("Email-Address", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input type="email" id="email" name="email" />
                            </div>
                            <label id="email"></label>
                        </div>

                        <div class="form-group">
                            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input type="password" id="password" name="password" />
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" id="btnlogin" value="Login" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>

    </div>
    <div class="col-lg-3"></div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $("#btnlogin").click(function (e) {
        e.preventDefault();
        var form = $(this).closest('#form');

        setTimeout(function () {
            form.submit();
        }, 2000); // in milliseconds

        $("<img src='https://i.gifer.com/8CLc.gif' height='100' width='100'> ").appendTo("#target");
    });
</script>
