
@{
    ViewBag.Title = "UppdatePassword";
    Layout = "~/Views/Shared/_MainCust.cshtml";
}

<div id="feedback-form">
    <h2 class="header">Update Product</h2>
    <div>


        <form action="/Customer/UpdatePassword" method="post">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-3">
                        <label for="old">old-Password</label>
                    </div>
                    <div class="col-md-9">
                        <input type="password" name="old" id="old" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <label for="newpassword">New </label>
                    </div>
                    <div class="col-md-9">
                        <input type="password" id="newpassword" name="newpassword" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <label for="cnewpassword">Confirm</label>
                    </div>
                    <div class="col-md-9">
                        <input type="password" id="cnewpassword" name="cnewpassword" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Change Password" class="btn btn-default" />
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>
